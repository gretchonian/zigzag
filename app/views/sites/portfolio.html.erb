<script>
  $(function () {
    var downBox = $('.down').hide();
    var mainBox = $('.main-2').hide();
    var s = $('#apps-arrow');
    touchStart = function (event) {
        event.preventDefault();
        $(this).addClass("touched");
    };
    s.ontouchstart = touchStart;
    $(s).bind("touchstart mousedown", function (e) {
      $(mainBox).show();
      $('html, body').animate({
      scrollTop: $('.main-2').offset().top
      }, 2000);
      $(downBox).show("slide", {direction: 'down'}, 4000);
      $(s).hide();
    });
  }); 
</script>

